<div class = "container">
 	
 	<h1>Public photos</h1>

 	<div class= "row">

		<% @photos.each do |photo| %>
		<div class= "col-md-4">
		<p><%= photo.caption %> | <%= link_to 'show', user_photo_path(photo.user, photo) %></p>
		<p> <%= image_tag photo.image %> </p>
		</div>
	<% end %>
	</div>

<% if current_user %>
	<p><%= link_to 'View your photos', user_photos_path(current_user) %> | <%= link_to 'New photo', new_user_photo_path(current_user) %></p>
<% end %>

